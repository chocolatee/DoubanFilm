<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/view_search_edit_frame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="4.0dip"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/view_search_plate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <view
                android:id="@+id/view_search_src_text"
                class="com.shenhui.doubanfilm.ui.widget.IzzySearchView$SearchAutoComplete"
                android:layout_width="0.0dip"
                android:layout_height="36.0dip"
                android:layout_gravity="bottom"
                android:layout_weight="1.0"
                android:background="@null"
                android:ellipsize="end"
                android:imeOptions="actionSearch"
                android:inputType="textAutoComplete|textNoSuggestions"
                android:minWidth="160dip"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textCursorDrawable="@null" />

            <ImageView
                android:id="@+id/view_search_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:focusable="true"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:src="@drawable/ic_clear" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>